<odoo>
    <record id="solarix_mrp_production_form_view_inherited" model="ir.ui.view">
        <field name="name">solarix.mrp.production.view.inherited</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
              <xpath expr="//field[@name='user_id']" position="after">
                <field name="analytic_account_id" />
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='operations']/field[@name='workorder_ids']/field[@name='qty_remaining']" position="after">
                <field name="cost_production"7>
            </xpath>
        </field>
    </record>

</odoo>